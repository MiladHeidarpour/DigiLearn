@page
@model DigiLearn.Web.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_Auth";
    ViewData["Title"] = "ثبت نام در سایت";
}
<form method="post" class="row register mt-4 pt-0">
    <div class="phone mb-5 col-12">
        <input type="number" class="form-control" asp-for="PhoneNumber" maxlength="11" placeholder="موبایل" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="password mb-5 col-12 col-xl-6 col-lg-6">
        <input type="password" class="form-control" asp-for="Password" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="rePassword mb-5 col-12 col-xl-6 col-lg-6">
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="تکرار کلمه عبور" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-success btn-register  mt-4 d-flex justify-content-center align-items-center">
        <span> ثبت نام</span>
        <i class="fa fa-chevron-left"></i>
    </button>
</form>
<div class="login-footer">
    <a href="#">
        <i class="zmdi zmdi-lock"></i>
        کلمه عبور خود را فراموش کرده ام !
    </a>
    <a asp-page="Login">
        <i class="zmdi zmdi-sign-in"></i>
        ورود به سایت
    </a>
</div>