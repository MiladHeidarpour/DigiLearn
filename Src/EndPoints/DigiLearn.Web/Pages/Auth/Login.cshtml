@page
@model DigiLearn.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_Auth";
    ViewData["Title"] = "ورود به حساب";
}
<form method="post" class="login mt-4 pt-0">
    <div class="emailOrUserNam">
        <p>شماره تلفن</p>
        <input type="text" asp-for="PhoneNumber" class="form-control" maxlength="11" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="password mt-5">
        <p>کلمه عبور </p>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="checkbox mt-4">
        <input type="checkbox" asp-for="IsRememberMe" value="true" id="check1" />
        <span checkfor="check1">مرا بخاطر بسپار</span>
    </div>
    <button class="btn btn-success btn-login mt-4 d-flex justify-content-center align-items-center">
        <span> ورود</span>
        <i class="fa fa-chevron-left"></i>
    </button>
</form>
<div class="login-footer">
    <a href="#">
        <i class="zmdi zmdi-lock"></i>
        کلمه عبور خود را فراموش کرده ام !
    </a>
    <a asp-page="Register">
        <i class="zmdi zmdi-account-add"></i>
        عضویت در سایت
    </a>
</div>